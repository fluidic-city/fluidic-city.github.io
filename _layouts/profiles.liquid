---
layout: page
---
<style>
  .profile-image-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .profile-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 3px;
  }

  .profile-name {
    font-size: 18px;
    font-weight: 400;
  }
</style>

<div class="profile-image-container">
  {% if page.profiles %}
    {% for profile in page.profiles %}
      <div class="profile-item">
        {% if profile.image %}
          {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
          {% include figure.liquid loading="eager" path=profile_image_path class="profile-image z-depth-1" alt=profile.image %}
        {% endif %}
        {% if profile.more_info %}
          <div class="profile-name">{{ profile.more_info }}</div>
        {% endif %}
      </div>
    {% endfor %}
  {% endif %}
</div>
