---
layout: page
---
<style>
  .profile-image-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
  }
</style>

<div class="profile-image-container">
  {% if page.profiles %}
    {% for profile in page.profiles %}
      {% if profile.image %}
        {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
        {% include figure.liquid loading="eager" path=profile_image_path class="profile-image z-depth-1" alt=profile.image %}
      {% endif %}
    {% endfor %}
  {% endif %}
</div>

