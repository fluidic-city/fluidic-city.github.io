<div class="news">
  <div class="grid">
    {% assign current_year = page.url | split: '/' | last | remove: '/' %}

    <h3> {{ current_year }} </h3>

    {% assign year_news = site.news | where: "date", current_year %}


    {% for item in year_news %}
      {% include news_item.liquid %}
    {% endfor %}
  </div>
</div>

