---
layout: default
---

<h1>{{ page.title }}</h1>

<div class="news">
  <div class="grid">
    {% assign default_year = site.news | map: 'year' | uniq | sort | last %} 
    
    {% comment %} can remove the | last filter to show all news in default news page {% endcomment %}
    
    {% assign current_year = page.year | default: default_year %}

    {% assign posts = site.news | where: "year", current_year | sort: 'date' | reverse %}
    {% for item in posts %}
      {% include news_item.liquid %}
    {% endfor %}
  </div> 
  <!-- Link to the new pagination stylesheet -->
  <link rel="stylesheet" href="{{ '/assets/css/pagination.css' | relative_url }}">
</div>
<!-- Pagination links -->
<div class="pagination-links">
  {% assign current_year = page.year | date: "%Y" %}
  {% assign years = site.news | map: 'year' | uniq | sort | reverse %}
  
  <!-- Previous year button -->
  {% assign current_index = years | index: current_year | plus: 0 %}
  {% if current_index >= 0 %}
    <a href="{{ site.baseurl }}/news/{{ years[current_index | minus: 1] }}/">&laquo; Previous</a>
  {% endif %}

  {% for year in years %}
    {% if year == current_year %}
      <em>{{ year }}</em>
    {% else %}
      <a href="{{ site.baseurl }}/news/{{ year }}/">{{ year }}</a>
    {% endif %}
  {% endfor %}
  
  <!-- Next year button -->
  {% if current_index < years.size | minus: 1 %}
    <a href="{{ site.baseurl }}/news/{{ years[current_index | plus: 1] }}/">Next &raquo; </a>
  {% endif %}
  
  <link rel="stylesheet" href="{{ '/assets/css/pagination.css' | relative_url }}">
</div>
