<div class="grid-sizer"></div>
<div class="grid-item">
  <div class="card hoverable">
    {% if item.img %}
      {% include figure.liquid
        loading="eager"
        path=item.img
        sizes = "250px"
        alt="news item thumbnail"
      %}
    {% endif %}
    <div class="card-body">
      <p class="card-title">{{ item.title }}</p>
      <p class="card-date">{{ item.date | date: '%b %d, %Y' }}</p>
      <p class="card-text">{{ item.description }}</p>
      {% if item.read_more %}
        <a href="{{ item.url | relative_url }}">Read More</a>
      {% endif %}
    </div>
  </div>
</div>
          