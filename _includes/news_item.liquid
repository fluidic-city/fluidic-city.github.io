<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if item.redirect %}{{ item.redirect }}{% else %}javascript:void(0);{% endif %}" {% if item.redirect == null %}onclick="showNewsItem('{{ item.url | relative_url }}')"{% endif %}>
    <div class="card hoverable">
      {% if item.img %}
        {% include figure.liquid
          loading="eager"
          path=item.img
          sizes = "250px"
          alt="news item thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ item.title }}</h5>
        <p class="card-text">{{ item.description }}</p>
      </div>
    </div>
  </a>
</div>
