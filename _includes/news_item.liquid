<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if news.redirect %}{{ news.redirect }}{% else %}{{ news.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      {% if news.img %}
        {% include figure.liquid
          loading="eager"
          path=news.img
          sizes = "250px"
          alt="news thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title text-lowercase">{{ news.title }}</h2>
        <p class="card-text">{{ news.description }}</p>
      </div>
    </div>
  </a>
</div>
          