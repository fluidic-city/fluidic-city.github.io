<div class="card-item col">
  <a href="{% if news.redirect %}{{ news.redirect }}{% else %}{{ news.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      <div class="row g-0">
        {% if news.img %}
          <div class="card-img col-md-6">
            {% 
            include figure.liquid 
            loading="eager" 
            path=news.img sizes="(min-width: 768px) 156px, 50vw"
            alt="news thumbnail" 
            %}
          </div>
        {% endif %}
        <div class="{% if news.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title text-lowercase">{{ news.title }}</h3>
            <p class="card-text">{{ news.description }}</p>
          </div>
        </div>
      </div>
    </div>
</div>
