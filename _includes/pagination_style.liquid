<style>
    .pagination-links {
      font-size: 20px !important;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .pagination-links a,
    .pagination-links span,
    .pagination-links em {
      padding: 5px 10px;
      margin: 0 5px;
      font-size: 18px;
      text-decoration: none;
      color: #000000;
      transition: color 0.3s;
    }
    .pagination-links a:hover {
      color: #2698ba;
    }
    .pagination-links em {
      font-weight: bold;
      color: #2698ba;
    }
    .pagination-links .prev,
    .pagination-links .next {
      font-weight: bold;
    }
    @media (prefers-color-scheme: light) {
      .pagination-links a,
      .pagination-links span,
      .pagination-links em {
        color: #000000 !important;
      }
    }
    @media (prefers-color-scheme: dark) {
      .pagination-links a,
      .pagination-links span,
      .pagination-links em {
        color: #ccc;
      }
      .pagination-links a:hover {
        color: #2698ba;
      }
      .pagination-links em {
        color: #2698ba;
      }
    }
    </style>